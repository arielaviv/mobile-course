root = true

[*]
indent_size = 4
indent_style = space
end_of_line = lf
insert_final_newline = true
max_line_length = 200

[*.{kt,kts}]
ktlint_function_naming_ignore_when_annotated_with = Composable
ktlint_standard_function-naming = disabled
ktlint_standard_no-empty-first-line-in-class-body = disabled
